---
import { Header } from '@components/misc';
import { BaseHead } from '@components/seo';
import { products, SITE_TITLE } from '@data/index';
import { SITE_DESCRIPTION, socialLinks, techStacks } from '@data/index';
import RootLayout from '@layouts/root-layout.astro';
import { clsx } from '@utils/index';
---

<!doctype html>
<html lang='en'>
	<head>
		<BaseHead
			title={SITE_TITLE}
			description={SITE_DESCRIPTION}
			image='/images/ogimage.png'
		/>
	</head>

  <RootLayout>
    <div
      id='navbar+title'
      class='flex flex-col w-full gap-6 max-w-xl'>
      <Header />
      <h1
        class='w-full text-start text-[min(12vw,72px)] font-medium leading-[1] tracking-[-2px] sm:tracking-[-4px]'>
        Ec50n9</br>
        <span class='text-gray-500 dark:text-gray-400'>自由开发者</span>
      </h1>

			<!-- 个人介绍 -->
			<section class='flex flex-col gap-4 leading-relaxed tracking-wide'>
        <p class="text-lg font-medium">幸会 👋</p>
				<p class='text-lg font-medium'>
          我是 ec50n9，一位热爱技术的全栈工程师。
				</p>
        <p class="text-gray-500 dark:text-gray-400">
					我喜欢折腾有趣的东西，享受将想法转化为现实的过程。
        </p>
				<p class='text-gray-500 dark:text-gray-400'>
					从前端到后端，从小程序到桌面应用，我相信技术的价值在于解决实际问题。
					在过去两年的工作中，我主导了多个核心系统的开发，并在业余时间保持着对新技术的探索。
				</p>
			</section>


			<!-- 当前状态 -->
			<section class='flex flex-col gap-3'>
				<h2 class='text-3xl font-semibold text-gray-600 dark:text-gray-300'>
				  状态	
				</h2>
				<div class='flex flex-col gap-4 text-gray-500 dark:text-gray-400'>
					<p>独立全栈开发者，专注于产品开发与用户体验优化</p>
					<p>擅长快速 MVP 构建，注重代码质量与工程化实践</p>
					<p>积极拥抱 AI 工具，使用 ClaudeCode、CodeX、Cursor 提升开发效率</p>
				</div>
			</section>


			<!-- 技术栈 -->
			<section id='about' class='flex flex-col gap-4'>
				<h2 class='text-3xl font-semibold text-gray-600 dark:text-gray-300'>
					技术
				</h2>

				<div class='grid grid-cols-1 md:grid-cols-2 gap-4'>
          {techStacks.map(techStack=>(
            <div class={clsx('p-4 rounded-lg', techStack.bgClass)}>
              <h3 class={clsx('font-semibold mb-2', techStack.titleColor)}>{techStack.title}</h3>
              <p class={clsx('text-sm font-medium', techStack.textColor)}>
                {techStack.items.map(item=>item.name).join(' / ')} 
              </p>
            </div>
          ))}
				</div>


        {products.length ?
          <div class='font-medium text-lg text-gray-700 dark:text-gray-300'>
            我参与的项目包括：
            <div class='flex flex-wrap gap-2 mt-5'>
              {
                products.map((product) => (
                  <a
                    href={product.url}
                    target='_blank'
                    class='p-2 rounded-full gap-2 flex-wrap hover:rotate-1 hover:scale-105 transition-all duration-300 flex items-center justify-center bg-gray-100 hover:bg-gray-200 dark:bg-[#1F1F1F] dark:hover:bg-[#2F2F2F]'>
                    <img
                      src={product.image}
                      alt={product.name}
                      class='size-9'
                    />
                    <span class='mr-2'>{product.name}</span>
                  </a>
                ))
              }
            </div>
          </div>
        : ''}

        <div class='font-medium text-gray-700 dark:text-gray-400'>
          <a
            href=''
            target='_blank'
            class='underline underline-offset-2'>
            认识一下
          </a>
        </div>
			</section>

      <div
        id='social-links'
        class='flex flex-row gap-4'>
        {
          socialLinks.map((link) => (
            <a
              href={link.url}
              class='text-lg font-medium text-gray-700 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 hover:underline underline-offset-2'>
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
  </RootLayout>
</html>
